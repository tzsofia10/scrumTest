        <TextBox HorizontalAlignment="Left" Margin="141,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228" Background="#FFBFBEBE"/>
        <Label Content="1.Ki a Scrum csapat vezetője?" HorizontalAlignment="Left" Margin="4,161,0,0" VerticalAlignment="Top" FontSize="15" FontFamily="Arial"/>
        <ListBox HorizontalAlignment="Left" Height="76" Margin="10,194,0,0" VerticalAlignment="Top" Width="207" >
