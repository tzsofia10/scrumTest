        Title="Scrum Test" Height="580" Width="1100" FontFamily="Arial Black" FontSize="22">
    <Grid>
        <Label Content="Scrum Test" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Neved:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="15" Width="75"/>
        <TextBox HorizontalAlignment="Left" Margin="136,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="228" Background="#FFBFBEBE"/>
