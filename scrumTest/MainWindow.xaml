        <Label Content="" HorizontalAlignment="Left" Margin="796,397,0,0" VerticalAlignment="Top" FontSize="15" FontFamily="Arial"/>
        <Label Content="" HorizontalAlignment="Left" Margin="885,146,0,0" VerticalAlignment="Top" FontSize="12" FontFamily="Arial" Height="29" Width="205" Background="#FFDF8EFF"/>
        <Label Content="" HorizontalAlignment="Left" Margin="882,216,0,0" VerticalAlignment="Top" FontSize="12" FontFamily="Arial" Height="25" Width="205" Background="#FFDF8EFF"/>
